{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es7"],
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "noImplicitAny": false,
    "outDir": "./build",
    "types": ["node"],
    "declaration": true
  },
  "include": ["src"]
}
